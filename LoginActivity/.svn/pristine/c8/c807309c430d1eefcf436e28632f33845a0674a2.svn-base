<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="left|top" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_gravity="left|top" 
        android:background="@drawable/border_item_chafangoverview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2778eb"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pic_xitong"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/huxixitong" />

            <TextView
                android:id="@+id/name_xitong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@+string/huxixitong"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:id="@+id/lis_result">

        </LinearLayout>
    </LinearLayout>
       
</LinearLayout>