<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/main_bg_landscape"
    tools:context=".LoginActivity">
	
	<LinearLayout
	    android:layout_width="352dp"
	    android:layout_height="318dp"
	    android:orientation="vertical"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:layout_marginTop="80dp"
	    android:layout_marginBottom="30dp"
	    android:layout_marginLeft="10dp"
	    android:background="@drawable/main_bg20"

	    >
	    
	<LinearLayout
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:gravity="center"
	         android:layout_marginTop="68dp"
		    >
	    <ImageView android:id="@+id/yidongchafang_logo"  
	        android:src="@drawable/yidongchafang_logo"
	        android:layout_width="274dp"
	        android:layout_height="46dp"
	        android:layout_marginTop="0dp"
	        android:layout_marginLeft="4dp"
		/>
	    <LinearLayout
	        android:id="@+id/login_center_image"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="3dp"
	        android:layout_marginTop="30dp"
		    >
			
			<LinearLayout
			    android:id="@+id/username_edit_layout"
			    android:layout_width="328dp"
			    android:layout_height="41dp"
			    
			    android:gravity="center"
			    android:background="@drawable/login_user_background" >
	
			    <EditText
			        android:id="@+id/username_edit"
			        android:background="@null"
			        android:textColor="#ffffff"
			        android:textSize="20dp"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="50dp"
			        android:layout_marginRight="10dp"
			        android:hint="请输入登录账号"
			        android:inputType="text"
			        android:singleLine="true" />
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/userpassword_edit_layout"
			    android:layout_width="328dp"
			    android:layout_height="41dp"
			    android:layout_marginTop="3dp"
			    android:gravity="center"
			    android:background="@drawable/login_password_background" >
				<EditText  
			        android:id="@+id/userpassword_edit"
			        android:background="@null"
			        android:textColor="#ffffff"
			        android:textSize="20dp"
			        android:layout_width="match_parent"  
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="50dp"
			        android:layout_marginRight="10dp" 
			        android:hint="请输入登录密码"
			        android:singleLine="true"
			        android:inputType="textPassword"
			        android:password="true"
				/>
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/login_button_layout" 
			    android:layout_width="328dp"
			    android:layout_height="41dp"
			    android:layout_marginTop="7dp"
			    android:gravity="center" >
				<Button  
					android:id="@+id/login_button" 
					android:background="@drawable/login_btn_selecter"
					android:layout_width="match_parent"  
					android:layout_height="match_parent"
		      		android:text="登录"
		      		android:textSize="20dp"
				/> 
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	    
	    
	</LinearLayout>
    
	    <TextView
        android:id="@+id/system_login_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="40dp"
        android:text="当前系统版本号：v4.14.2"
        android:textColor="#676d73"
        android:textSize="@dimen/version_font_size" />
		
	
</LinearLayout>