<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/leftBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:background="@drawable/main_left_userinfo_selector"
        android:contentDescription="@string/app_name"
        android:onClick="openLeftUserInfo"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/left_feature_Menu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:background="@drawable/main_left_featuremenu_selector"
        android:contentDescription="@string/app_name"
        android:onClick="openLeftFeatureMenu"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0.0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/usericon"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:src="@drawable/common_man_te" />

        <TextView
            android:id="@+id/header_huanzhe_info"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/rightBtnYizhuTixing"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:background="@drawable/main_right_yizhutixing_selector"
        android:contentDescription="@string/app_name"
        android:onClick="loadBingquganlan"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/rightBtnHuanzheList"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:background="@drawable/main_right_huanzhelist_selector"
        android:contentDescription="@string/app_name"
        android:onClick="openHuanzheList"
        android:scaleType="fitXY" />

</LinearLayout>