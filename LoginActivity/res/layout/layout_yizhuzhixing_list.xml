<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mytab"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/yizhu_type_fenlei"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#EAEAEA"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/yizhu_type_all"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/yizhu_type_changqi"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center" />

            <TextView
                android:id="@+id/yizhu_type_linshi"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp" >

            <TextView
                android:id="@+id/yizhu_one_type"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ListView
                android:id="@+id/lv_yizhu"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/yizhu_zhuangtai_fenlei"
                android:divider="#cccccc"
                android:dividerHeight="1dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scrollbars="none" >
            </ListView>

            <LinearLayout
                android:id="@+id/yizhu_zhuangtai_fenlei"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="#EAEAEA"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/yizhu_zhixing_0"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/yizhu_zhixing_1"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/yizhu_zhixing_2"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/yizhu_zhixing_3"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/yizhu_zhixing_4"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/yizhu_zhixing_5"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</TabHost>