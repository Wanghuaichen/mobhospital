<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

        <View
            android:layout_width="0.5px"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/one_report_name"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:textColor="#CD3700"
            android:textSize="13sp" />

        <View
            android:layout_width="0.5px"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/one_report_jiancheng"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="13sp" />
        
        <View
            android:layout_width="0.5px"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/one_report_result"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="13sp" />

        <View
            android:layout_width="0.5px"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/one_report_zhuangtai"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="13sp" />

        <View
            android:layout_width="0.5px"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/one_report_danwei"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="13sp" />

        <View
            android:layout_width="0.5px"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/one_report_cankaozhi"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="13sp" />

        <View
            android:layout_width="0.5px"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:visibility="visible" />
    </LinearLayout>