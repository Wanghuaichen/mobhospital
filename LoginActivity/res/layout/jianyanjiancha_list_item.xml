<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_shenqingshijian"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:background="@drawable/jianyanjiancha_list_bg"
        android:gravity="center"
        android:textSize="@dimen/jianyanjiancha_content_textsize" />

    <TextView
        android:id="@+id/tv_jiancha_keshi"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/jianyanjiancha_list_bg"
        android:gravity="center"
        android:textSize="@dimen/jianyanjiancha_content_textsize" />

    <TextView
        android:id="@+id/tv_jiancha_mingcheng"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.3"
        android:background="@drawable/jianyanjiancha_list_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:textSize="@dimen/jianyanjiancha_content_textsize" />


    <TextView
        android:id="@+id/tv_baogaoshijian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_weight="2"
        android:background="@drawable/jianyanjiancha_list_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:textSize="@dimen/jianyanjiancha_content_textsize" />

</LinearLayout>