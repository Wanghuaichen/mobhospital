<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
     <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="@color/tiwenjiludan_list_dingbu_backgroung">
    <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="住院周周次"
        android:textColor="@color/tiwenjiludan_list_subtitle"
         android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/tiwenjilu_list_subtitle_shangxiabianjv"/>  
         <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="住院周对应日期"
        android:textColor="@color/tiwenjiludan_list_subtitle"
         android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/tiwenjilu_list_subtitle_shangxiabianjv"/> 
         <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="备注"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/tiwenjiludan_list_subtitle"
        android:layout_margin="@dimen/tiwenjilu_list_subtitle_shangxiabianjv"/>   
  </LinearLayout>
  <com.tiantanhehe.yidongchafang.views.views.CustomListview 
      android:id="@+id/tiwenlist"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:divider="@null"
      android:layout_margin="@dimen/tiwenjilu_list_subtitle_shangxiabianjv"
      >
      
  </com.tiantanhehe.yidongchafang.views.views.CustomListview>     
    </LinearLayout>
  

</ScrollView>
